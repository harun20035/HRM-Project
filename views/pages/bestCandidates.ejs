<%- include('../partials/header', { title: 'Best Candidates' }); %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Best Candidates</h1>

    <% if (candidates.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Average Score</th>
                </tr>
            </thead>
            <tbody>
                <% candidates.forEach((candidate, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= candidate.first_name %> <%= candidate.last_name %></td>
                        <td><%= candidate.email %></td>
                        <td>
                            <%= candidate.average_score != null ? parseFloat(candidate.average_score).toFixed(2) : 'N/A' %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No candidates have been ranked yet.</p>
    <% } %>
</div>

<%- include('../partials/footer'); %>
